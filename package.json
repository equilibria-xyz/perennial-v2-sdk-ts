{
  "name": "@perennial/sdk",
  "version": "0.0.1-beta5",
  "description": "",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "packageManager": "pnpm@8.15.5",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "rimraf dist && pnpm run gen:lens-artifact && pnpm run gen:gql-typings && pnpm exec tsc -p tsconfig.build.json",
    "build:watch": "nodemon --exec 'pnpm exec tsc -p tsconfig.build.json' --watch src/ -e ts --ignore src/abi/",
    "prepublishOnly": "pnpm run build",
    "gen:lens-artifact": "pnpm exec hardhat compile && node ./scripts/lensAbiCopy.js && prettier --write ./src/abi/*Lens.abi.ts",
    "gen:gql-typings": "graphql-codegen --config graph-codegen.ts",
    "format": "prettier --write src/",
    "format:check": "prettier --check src/",
    "lint": "eslint --ext .ts src/",
    "precommit": "pnpm exec lint-staged",
    "prepush": "pnpm run build",
    "prepare": "husky"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@equilibria/perennial-v2": "1.0.0-rc4",
    "@equilibria/perennial-v2-vault": "1.0.0-rc4",
    "@equilibria/root": "^2.0.0-rc0",
    "@graphql-codegen/cli": "^3.3.1",
    "@graphql-codegen/client-preset": "^3.0.1",
    "@graphql-typed-document-node/core": "^3.2.0",
    "@openzeppelin/contracts": "4.8.0",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/node": "^20.11.30",
    "@typescript-eslint/eslint-plugin": "^7.3.1",
    "@typescript-eslint/parser": "^7.3.1",
    "dotenv": "^16.3.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "hardhat": "^2.17.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "nodemon": "^3.1.0",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.2",
    "tslib": "^2.6.2",
    "typescript": "5.4.3"
  },
  "dependencies": {
    "@perennial/pyth-evm-js": "^1.32.0-fork4",
    "date-fns": "^2.30.0",
    "graphql": "^16.6.0",
    "graphql-request": "^6.0.0",
    "viem": "2.8.18"
  },
  "pnpm": {
    "overrides": {
      "@equilibria/perennial-v2": "1.0.0-rc4"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
